@{
    ViewData["Title"] = "訂餐系統";
}

<div class="text-center">
    <h1 class="display-4">訂餐系統</h1>
    
    <!-- 即時時間顯示區塊 -->
    <div class="mb-4">
        <h3>目前時間</h3>
        <p id="current-time" class="fs-4 text-primary">@ViewBag.ServerTime</p>
    </div>
    
    <!-- 主選單區塊 -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title mb-4">主要功能選單</h4>
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Index", "Store")" class="btn btn-lg btn-primary">
                            <i class="bi bi-shop"></i> 店家列表
                        </a>
                        <a href="@Url.Action("SelectRestaurant", "Order")" class="btn btn-lg btn-success">
                            <i class="bi bi-cart"></i> 訂購餐點
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 即時時間更新
        function updateTime() {
            const now = new Date();
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            
            const timeString = `${year}/${month}/${day} ${hours}:${minutes}:${seconds}`;
            document.getElementById('current-time').textContent = timeString;
        }
        
        // 每秒更新一次時間
        setInterval(updateTime, 1000);
        
        // 頁面載入時立即更新一次
        updateTime();
    </script>
}
