@model OrderLunchWeb.Models.Order
@{
    ViewData["Title"] = $"訂單詳情 - {Model.OrderId}";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">首頁</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("History", "Order")">訂單紀錄</a></li>
            <li class="breadcrumb-item active" aria-current="page">訂單詳情</li>
        </ol>
    </nav>

    @if (TempData["ErrorMessage"] is not null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> 訂單詳情</h5>
                    @switch (Model.Status)
                    {
                        case OrderLunchWeb.Models.OrderStatus.Pending:
                            <span class="badge bg-warning text-dark">待確認</span>
                            break;
                        case OrderLunchWeb.Models.OrderStatus.Confirmed:
                            <span class="badge bg-info">已確認</span>
                            break;
                        case OrderLunchWeb.Models.OrderStatus.Preparing:
                            <span class="badge bg-light text-dark">準備中</span>
                            break;
                        case OrderLunchWeb.Models.OrderStatus.Completed:
                            <span class="badge bg-success">已完成</span>
                            break;
                        case OrderLunchWeb.Models.OrderStatus.Cancelled:
                            <span class="badge bg-danger">已取消</span>
                            break;
                    }
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">訂單編號</div>
                        <div class="col-sm-8">
                            <strong class="text-primary"><code>@Model.OrderId</code></strong>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">訂購時間</div>
                        <div class="col-sm-8">@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm:ss")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">餐廳</div>
                        <div class="col-sm-8">
                            <i class="bi bi-shop text-primary"></i> @Model.StoreName
                        </div>
                    </div>

                    <hr />

                    <h6 class="mb-3"><i class="bi bi-person-fill"></i> 訂餐者資訊</h6>
                    <div class="row mb-2">
                        <div class="col-sm-4 text-muted">姓名</div>
                        <div class="col-sm-8">@Model.CustomerName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted">聯絡電話</div>
                        <div class="col-sm-8">
                            <i class="bi bi-telephone"></i> @Model.CustomerPhone
                        </div>
                    </div>

                    <hr />

                    <h6 class="mb-3"><i class="bi bi-list-ul"></i> 訂購項目</h6>
                    <div class="table-responsive">
                        <table class="table table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>菜品名稱</th>
                                    <th class="text-end">單價</th>
                                    <th class="text-center">數量</th>
                                    <th class="text-end">小計</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.MenuItemName</td>
                                        <td class="text-end">NT$ @item.Price</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end"><strong>NT$ @item.Subtotal</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end"><strong>總金額</strong></td>
                                    <td class="text-end">
                                        <strong class="text-success fs-5">NT$ @Model.TotalAmount</strong>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> 訂單摘要</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex justify-content-between mb-2">
                            <span class="text-muted">項目數量</span>
                            <span><strong>@Model.Items.Count</strong> 項</span>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span class="text-muted">總數量</span>
                            <span><strong>@Model.Items.Sum(i => i.Quantity)</strong> 份</span>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span class="text-muted">訂單狀態</span>
                            @switch (Model.Status)
                            {
                                case OrderLunchWeb.Models.OrderStatus.Pending:
                                    <span class="badge bg-warning text-dark">待確認</span>
                                    break;
                                case OrderLunchWeb.Models.OrderStatus.Confirmed:
                                    <span class="badge bg-info">已確認</span>
                                    break;
                                case OrderLunchWeb.Models.OrderStatus.Preparing:
                                    <span class="badge bg-primary">準備中</span>
                                    break;
                                case OrderLunchWeb.Models.OrderStatus.Completed:
                                    <span class="badge bg-success">已完成</span>
                                    break;
                                case OrderLunchWeb.Models.OrderStatus.Cancelled:
                                    <span class="badge bg-danger">已取消</span>
                                    break;
                            }
                        </li>
                        <hr />
                        <li class="d-flex justify-content-between">
                            <span class="text-muted">總金額</span>
                            <strong class="text-success">NT$ @Model.TotalAmount</strong>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="d-grid gap-2">
                <a href="@Url.Action("History", "Order")" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> 返回訂單紀錄
                </a>
                <a href="@Url.Action("SelectRestaurant", "Order")" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> 新增訂單
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="bi bi-house"></i> 返回首頁
                </a>
            </div>
        </div>
    </div>
</div>
