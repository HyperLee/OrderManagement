@model List<OrderLunchWeb.Models.Store>
@{
    ViewData["Title"] = "選擇餐廳";
    var pendingOrders = ViewBag.PendingOrders as List<OrderLunchWeb.Models.Order> ?? new List<OrderLunchWeb.Models.Order>();
}

<div class="container">
    <h1 class="mb-4">選擇餐廳</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="關閉"></button>
        </div>
    }

    @if (pendingOrders.Any())
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h5 class="alert-heading">
                <i class="bi bi-info-circle"></i> 您有進行中的訂單
            </h5>
            <p class="mb-0">
                您有 @pendingOrders.Count 筆進行中的訂單。
                <a href="@Url.Action("History", "Order")" class="alert-link">查看訂單紀錄</a>
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="關閉"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var store in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@store.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-geo-alt"></i> @store.Address
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-telephone"></i> @store.Phone
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> @store.BusinessHours
                                </small>
                            </p>
                            <p class="card-text">
                                <span class="badge bg-secondary">@store.MenuItems.Count 項菜品</span>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("Menu", "Order", new { storeId = store.Id })" 
                               class="btn btn-primary w-100">
                                <i class="bi bi-menu-button-wide"></i> 瀏覽菜單
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-shop display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">目前沒有可訂餐的餐廳</h3>
            <p class="text-muted">請稍後再試，或聯絡管理員新增餐廳。</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                <i class="bi bi-house"></i> 返回首頁
            </a>
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> 返回首頁
        </a>
    </div>
</div>
